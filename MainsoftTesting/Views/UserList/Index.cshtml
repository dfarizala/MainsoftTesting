@model IEnumerable<MainsoftTesting.Domain.Models.CreateUserViewModel>

@{
    ViewData["Title"] = "UserList";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-10">
                <h3>Lista de usuarios</h3>
            </div>
            <div class="col-2">
                <a asp-action="Create" class="btn btn-success">Agregar nuevo usuario</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="card">
            <div class="card-header">
                Parámetros de búsqueda
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-11">
                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <label class="form-label">No. identificación</label>
                                    <div class="col-md-12">
                                        @Html.TextBox("FindById", "", new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label class="form-label">Nombre</label>
                                    <div class="col-md-12">
                                        @Html.TextBox("FindByName", "", new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label class="form-label">Apellido</label>
                                    <div class="col-md-12">
                                        @Html.TextBox("FindByLastName", "", new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <label class="form-label">Nivel académico</label>
                                    <div class="col-md-12">
                                        @Html.DropDownList("FindByStudy", new SelectList(Enum.GetValues(typeof(StudyLevel))),"--",new { @class = "form-select" })                                    
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="col-1">
                        <a asp-action="Index" class="btn btn-primary">Filtrar</a>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CellPhone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Gender)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MaritalStatus)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DocType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DocNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nationality)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Age)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                    <tr>
                        <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CellPhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaritalStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DocType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DocNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nationality)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td colspan="2">
                        @Html.ActionLink("Detalles", "Details", new { id=item.Id, @class="btn btn-primary" }) 
                    </td>
                </tr>
        }
            </tbody>
        </table>

    </div>
</div>
